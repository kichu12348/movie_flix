<%- include('partials/header') %>

<div class="max-w-6xl mx-auto">
  <h2 class="text-3xl font-bold mb-6 text-gray-800">My Rentals</h2>

  <% if (rentals.length === 0) { %>
    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded">
      You don't have any active rentals. <a href="/movies" class="underline font-bold">Browse movies</a>
    </div>
  <% } else { %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Movie Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Genre</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Due Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Late Fee</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% rentals.forEach(rental => { %>
            <tr class="<%= rental.isOverdue ? 'bg-red-50' : '' %>">
              <td class="px-6 py-4 whitespace-nowrap font-semibold"><%= rental.title %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= rental.genre %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="<%= rental.isOverdue ? 'text-red-600 font-bold' : '' %>">
                  <%= new Date(rental.due_date).toLocaleDateString() %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if (rental.lateFee > 0) { %>
                  <span class="text-red-600 font-bold">₹<%= rental.lateFee %></span>
                  <span class="text-xs text-gray-500">(<%= rental.lateDays %> days late)</span>
                <% } else { %>
                  <span class="text-green-600">₹0</span>
                <% } %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <form method="POST" action="/return/<%= rental.id %>" class="inline">
                  <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition duration-200">
                    Return
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <% const totalLateFees = rentals.reduce((sum, r) => sum + r.lateFee, 0); %>
    <% if (totalLateFees > 0) { %>
      <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <strong>Total Late Fees: ₹<%= totalLateFees %></strong>
      </div>
    <% } %>
  <% } %>
</div>

<%- include('partials/footer') %>
